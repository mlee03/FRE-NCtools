if test "$VERBOSE" = yes
then
    set -x
fi

. "${srcdir=.}/init.sh"

command -v fregrid_parallel && test -z "$SKIP_MPI_TESTS" \
    || skip_ "MPI tests disabled"

expensive_

make_hgrid \
    --grid_type gnomonic_ed \
    --nlon 512 \
    --grid_name C256_grid \
    || framework_failure_ failed to create C256 grid files

make_solo_mosaic \
    --num_tiles 6 \
    --dir ./ \
    --mosaic_name C256_mosaic \
    --tile_file C256_grid.tile1.nc,C256_grid.tile2.nc,C256_grid.tile3.nc,C256_grid.tile4.nc,C256_grid.tile5.nc,C256_grid.tile6.nc \
    || framework_failure_ failed to create C256 mosaic files

fregrid \
    --input_mosaic C256_mosaic.nc \
    --nlon 640 \
    --nlat 400 \
    --latBegin 15.0 \
    --latEnd 65.0 \
    --lonBegin 230.0 \
    --lonEnd 310.0 \
    --remap_file fregrid_remap_file_640_by_400.nc \
    --check_conserve \
    || framework_failure_ failed to create remap file non-mpi
get_ncpu_
$MPIRUN -n $ncpu fregrid \
    --input_mosaic C256_mosaic.nc \
    --nlon 640 \
    --nlat 400 \
    --latBegin 15.0 \
    --latEnd 65.0 \
    --lonBegin 230.0 \
    --lonEnd 310.0 \
    --remap_file fregrid_remap_file_640_by_400-mpi.nc \
    --check_conserve
ls -lrt
test -f fregrid_remap_file_640_by_400-mpi.nc \
    || fail_ remap file not created mpi
"${top_srcdir}"/tests/nc_cmp -md fregrid_remap_file_640_by_400.nc fregrid_remap_file_640_by_400-mpi.nc \
    || fail_ fregrid_remap_file_640_by_400.nc and fregrid_remap_file_640_by_400-mpi.nc differ

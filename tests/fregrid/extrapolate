if test "$VERBOSE" = yes
then
    set -x
fi

. "${srcdir=.}/init.sh"

# Create the required input files
${builddir=..}/create_temp_salt_file || framework_failure_ failed to create ocean_temp_salt.nc
# create the required horizontal grids
# Make the CM2.1-like grid and mosaic
make_hgrid \
    --grid_type tripolar_grid \
    --nxbnd 2 \
    --nybnd 2 \
    --xbnd -280,80 \
    --ybnd -82,90 \
    --nlon 720 \
    --nlat 400 \
    --grid_name ocean_hgrid \
    || framework_failure_ failed to create ocean_hgrid grid file

make_solo_mosaic \
    --num_tiles 1 \
    --dir ./ \
    --mosaic_name ocean_mosaic \
    --tile_file ocean_hgrid.nc \
    --periodx 360 \
    || framework_failure_ failed to create ocean mosaic

# Create regular lat-lon grid (100:160, -15:15, size is 360x180) grid and mosaic
make_hgrid  \
    --grid_type regular_lonlat_grid  \
    --nxbnd 2  \
    --nybnd 2  \
    --xbnd 0,360  \
    --ybnd -2,2  \
    --nlon 720  \
    --nlat 360  \
    --grid_name latlon_grid \
    || framework_failure_ failed to create lat-lon grid file

make_solo_mosaic  \
    --num_tiles 1  \
    --dir ./  \
    --mosaic_name latlon_mosaic  \
    --tile_file latlon_grid.nc \
    --periodx 360 \
    || framework_failure_ failed to create lat-lon mosaic file

make_vgrid \
    --nbnds 3 \
    --bnds 0.,220.,5500. \
    --dbnds 10.,10.,367.14286 \
    --center c_cell \
    --grid_name ocean_vgrid || fail_ failed to create ocean vgrid

# Use the extrapolate option to remap the data
fregrid \
    --input_file ocean_temp_salt.nc \
    --output_file ocean_temp_salt_latlon.nc \
    --input_mosaic latlon_mosaic.nc \
    --output_mosaic ocean_mosaic.nc \
    --dst_vgrid ocean_vgrid.nc \
    --scalar_field salt \
    --check_conserve \
    --extrapolate \
    || framework_failure_ failed to remap data from ocean grid to lat-lon grid
test -f ocean_temp_salt_latlon.nc \
    || fail_ failed to create ocean_temp_salt_latlon.nc